<% if @user.blank? %>
<p>There are no users currently in the system.</p>
<% else %>
<p>These are the current users in our system</p>

<ul id = "user">
   <% @user.each do |c| %>
   <li>
      <%= link_to c.first_name, {:action => 'show', :id => c.id} -%>
      <%= link_to 'Edit', {:action => "edit", :id => c.id} -%>
      <%= link_to "Delete", {:action => "delete", :id => c.id}, :confirm => "Are you sure you want to delete this user?" -%>
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new User", {:action => 'new' }%></p>
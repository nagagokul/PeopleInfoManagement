<h1>Add new user</h1>

<%= form_tag :action => 'create' do %>

<p><label for = "user_first_name">FirstName</label>
<%= text_field 'users', 'first_name' %></p>

<p><label for = "user_last_name">LastName</label>
<%= text_field 'users', 'last_name' %></p>

<p><label for = "user_age">Age</label>
<%= text_field 'users', 'age' %></p>

<p><label for = "user_gender">Gender</label>
<%= text_field 'users', 'gender' %></p>

<p><label for = "user_date_of_birth">DateOfBirth</label>
<%= text_field 'users', 'date_of_birth' %></p>

<p><label for = "user_martial_status">MartialStatus</label>
<%= text_field 'users', 'martial_status' %></p>

<%= fields_for :addresses do |ff| %>
  <div>
    <%= ff.label :street_address %>
    <%= ff.text_field :street_address %>
    <br><br>
    <%= ff.label :city %>
    <%= ff.text_field :city %>
    <br><br>
    <%= ff.label :state %>
    <%= ff.text_field :state %>
    <br><br>
    <%= ff.label :country %>
    <%= ff.text_field :country %>
    <br><br>
    <%= ff.label :postal_code %>
    <%= ff.text_field :postal_code %>
    <br><br>
 </div>
<% end %>


<%= submit_tag "Create" %>
<br><br>
<% end -%>
